<h1>URL Shortener</h1>
<%= form_with model: Link.new do |form| %>
  <div class="flex items-center gap-2">
    <%= form.url_field :url, required: true, placeholder: "https://example.org", class: "flex-grow rounded" %>
    <%= form.button "Save", class: "px-3 py-2 bg-gray-100 rounded" %>
  </div>
<% end %>
<%= render @links %>